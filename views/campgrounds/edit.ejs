<% layout("layouts/boilerplate") %> 
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>">
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>"/>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image url</label>
          <input class="form-control" type="text" name="campground[image]" id="image" value="<%= camp.image %>"/>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input 
              class="form-control" type="number" id="price" name="campground[price]"
              placeholder="0.00" aria-label="price" aria-describedby="price-label" step="0.01" min="0"
              value="<%= camp.price %>"
              >
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" name="campground[description]" id="description">
            <%= camp.description %> 
          </textarea>
        </div>

        <div class="mb-3">
          <button class="btn btn-info px-5">Edit</button>
        </div>
      </form>
      <a href="/campgrounds/<%= camp._id %>">Back to campground</a>
    </div>
  </div>